@model ExamSite.ViewModels.ExamVM
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Course Details Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- bootstrap css -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!--font awesom CDN -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

    <!-- my css -->
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/courseDetails.css" />
    <link href="https://fonts.googleapis.com/css?family=Noto+Serif" rel="stylesheet">
</head>
<body>

    <div class="home">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">
                <img src="~/images/logo.svg" width="30" height="30" class="d-inline-block align-top" alt="">
                Exam Name
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <form class="serch-form form-inline mx-auto my-2 my-lg-0">
                    <input class="search form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
                </form>
                <div class="not-signedIn form-inline my-2 my-lg-0">
                    <form class="login-redirect form-inline my-2 my-lg-0">
                        <a href="~/User/Login">
                            <button class="btn btn-success my-2 my-sm-0" type="button">Login</button>
                        </a>
                    </form>
                    <form class="signup-redirect form-inline my-2 my-lg-0">
                        <a href="~/User/Register">
                            <button class="btn btn-danger my-2 my-sm-0" type="button">Sign up</button>
                        </a>
                    </form>
                </div>
            </div>
        </nav>
        <div class="course">
            <div class="course-head">
                <h1 class="course-name">@Model.ExamName</h1>
                <a href="~/User/Register">
                    <button class="btn btn-success my-2 my-sm-0" type="button">Start Exam</button>
                </a>
            </div>
            <div class="container">
                <div class="row">
                    <div class="mx-auto col-xl-9 col-lg-9 col-md-12 col-12">
                        <div class="course-details">
                            <h4 class="overview"> Overview</h4>
                            <div class="cdetails">
                                <div class="row">
                                    <div class="mx-auto aa col-xl-4 col-lg-4 col-md-4 col-12">
                                        <p class="personal-Info text-center"><span class="duration">Duration: @Model.Duration M</span></p>
                                    </div>
                                    <div class="mx-auto text-left col-xl-8 col-lg-8 col-md-8 col-12">
                                        <p>
                                            <span class="details: ">@Model.ExamDescription</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

</body>
