@model ExamSite.ViewModels.AnswerVM
<div class="container">
    <h2>Add Answer</h2>

    <input id="answer" type="text" name="Add Answer">
    <button id="btn2" class="btn btn-danger" type="button">Add</button>
</div>
@section scripts{
    <script>
    $("#btn2").click(function () {

        $.post("/Exam/AddAnswers/",
        {
            Question_ID: "@ViewBag.QuestionID",
            Answer: $("#answer").val(),
        },
        function (data, status) {
            $('.qqqq').append("<a class='list-group-item active' href='/Answers/Index/' " + data + ">" + $("#answer").val() + "</a><br>")
            $("#answer").val("");

            // alert("Data: " + data + "\nStatus: " + status);
        });
    });
    </script>
}