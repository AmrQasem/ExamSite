@model List<ExamSite.ViewModels.ExamVM>

@foreach (var item in Model)
{

    <div class="col-xl-3 col-lg-3 col-md-4 col-12">
        <div class="card">
            <img class="img-fluid card-img" src="~/images/download.jpg" alt="category name">
            <div class="card-img-overlay mx-auto">
                <h3 class="card-title">@item.ExamName</h3>
                <a href="@Url.Action("GetexamDetails","Exam", new {ExamID=item.ID })">
                    <div class="cat-courses mx-auto">
                        <span><img src="https://png.icons8.com/windows/80/000000/visible.png"></span>
                        View Exam
                    </div>
                </a>
            </div>
        </div>

    </div>

}